* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background-color: #1e1e1e;
    color: #00ff00;
    font-family: monospace;
    font-size: 1.25em; /* Increase font size by 125% */
}

#terminal {
    width: 100%; /* Previously 80%, now 100% to fit increased size */
    max-width: 750px; /* Increased max width by 125% from 600px */
    background-color: #000;
    padding: 25px; /* Increased padding by 125% */
    border-radius: 6.25px; /* Scaled up border radius */
    box-shadow: 0 0 12.5px rgba(0, 255, 0, 0.5); /* Scaled up shadow size */
}

.user {
    color: #2ee720;
    font-size: 1.25em;
}

.host {
    color: #33bbc7;
    font-size: 1.25em;
}

.directory {
    color: #ffffff;
    font-size: 1.25em;
}

.timestamp {
    color: #afad24;
    font-size: 1.25em;
}

.cursor {
    animation: blink 1s infinite;
    color: #00ff00;
}

#output {
    white-space: pre-wrap;
    margin-bottom: 12.5px; /* Increased margin-bottom by 125% */
    line-height: 1.875; /* Increased line height by 125% */
}

#input-line {
    display: flex;
    align-items: center;
    font-size: 1.25em; /* Ensure input line is scaled up too */
}
